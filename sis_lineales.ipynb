def df_dt(x, t,a1,a2):
    ## coexistencia
    P=np.array([[1,1],[1,-1]])
    iP=np.linalg.inv(P)
    L=np.array([[a1,0],[0,a2]])
    A=P@L@iP
    dx=A[0,0]*x[0]+A[0,1]*x[1]
    dy=A[1,0]*x[0]+A[1,1]*x[1]
    return np.array([dx,dy])
def Ma(a1=-2,a2=-1):
    P=np.array([[1,1],[1,-1]])
    iP=np.linalg.inv(P)
    P=np.array([[a1,0],[0,a2]])
    A=iP@P
    return A
